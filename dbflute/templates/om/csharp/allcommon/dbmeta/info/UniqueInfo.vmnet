#set ($myClassName = "${glUniqueInfoName}")

using System;
using System.Collections.Generic;
using ${glPackageBaseCommonDBMeta};

namespace ${glPackageBaseCommonDBMetaInfo} {

    public class ${myClassName} {

        // ===============================================================================
        //                                                                       Attribute
        //                                                                       =========
        protected ${glDBMetaInterfaceName} dbmeta;
        protected IList<${glColumnInfoName}> uniqueColumnList = new List<${glColumnInfoName}>();
        protected bool primary;

        // ===============================================================================
        //                                                                     Easy-to-Use
        //                                                                     ===========
        public bool ContainsColumn(String columnName) {
            foreach (${glColumnInfoName} columnInfo in uniqueColumnList) {
                if (columnInfo.ColumnDbName.Equals(columnName)) {
                    return true;
                }
            }
            return false;
        }

        public bool ContainsColumn(${glColumnInfoName} column) {
            return ContainsColumn(column.ColumnDbName);
        }

        // ===============================================================================
        //                                                                        Accessor
        //                                                                        ========
       public ${glDBMetaInterfaceName} DBMeta {
           get { return dbmeta; }
           set { this.dbmeta = value; }
       }

        public IList<${glColumnInfoName}> UniqueColumnList {
            get { return uniqueColumnList; }
        }

        public void AddUniqueColumnList(${glColumnInfoName} uniqueColumn) {
            this.uniqueColumnList.Add(uniqueColumn);
        }

        public ${glColumnInfoName} FirstColumn {
            get { return (${glColumnInfoName})this.uniqueColumnList[0]; }
        }

        public bool IsTwoOrMore {
            get { return this.uniqueColumnList.Count > 1; }
        }

        public bool IsPrimary {
            get { return this.primary; }
            set { this.primary = value; }
        }
    }
}
