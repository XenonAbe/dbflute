    public static void throwEntityAlreadyDeletedException(Object searchKey4log, ${glLatestSqlProviderName} latestSqlProvider, String tableDbName) {
        String msg = "Look! Read the message below." + getLineSeparator();
        msg = msg + "/* * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *" + getLineSeparator();
        msg = msg + "Not found the entity. The entity has already been deleted!" + getLineSeparator();
        msg = msg + getLineSeparator();
        msg = msg + "[Advice]" + getLineSeparator();
        msg = msg + "Please confirm the existence of your target record on your database." + getLineSeparator();
        msg = msg + "Does the target record really created before this operation?" + getLineSeparator();
        msg = msg + "Has the target record been deleted by other thread?" + getLineSeparator();
        msg = msg + "It is precondition that the record exists on your database." + getLineSeparator();
        msg = msg + getLineSeparator();
        msg = msg + "[SearchKey]" + getLineSeparator() + searchKey4log + getLineSeparator();
        final String dispalySql = getDisplaySqlForExceptionMessage(latestSqlProvider, tableDbName);
        if (dispalySql != null) {
            msg = msg + getLineSeparator();
            msg = msg + "[DisplaySQL]" + getLineSeparator() + dispalySql + getLineSeparator();
        }
        msg = msg + "* * * * * * * * * */" + getLineSeparator();
        throw new ${glPackageBaseCommonException}.${glEntityAlreadyDeletedException}(msg);
    }

