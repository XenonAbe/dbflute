#set ($manager = $selector.propertiesHtmlManager)
<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8" />
#if ($manager.hasTitle())
	<title>${manager.title}</title>
#else
	<title>${manager.projectName} properties</title>
#end
#if ($manager.isStyleSheetEmbedded())
	<style type="text/css">
${manager.styleSheetEmbedded}
	</style>
#elseif ($manager.isstyleSheetLink())
	${manager.styleSheetLink}
#else
	<style type="text/css">
* {
	margin: 0;
	padding: 0;
}
body {
	font-family: Verdana, "Hiragino Kaku Gothic Pro", "ヒラギノ角ゴ Pro W3", Meiryo, "メイリオ", "MS P Gothic", "MS Pゴシック", sans-serif;
	font-size: 80%;
	margin: 10px 5px 5px 15px;
	background-color: #ffffe0;
}

/* heading */
h1 {
	font-size: 1.5em;
	border-bottom: 2px solid #af0000;
	border-top: 2px solid #af0000;
}
h2 {
	margin: 30px 0 5px 0;
	font-size: 1.8em;
	border-bottom: 2px solid #af0000;
	border-left: 10px solid #af0000;
	text-indent: 10px;
}
h3 {
	padding: 0 0 0 10px;
	margin: 1em 10% 4px 0;
	border-left: double 3px #af0000;
	font-size: 1.5em;
	color: #333333;
}
h4 {
	padding: 0 0 0 10px;
	margin: 1em 10% 0 1em;
	border-top: solid 1px #af0000;
	border-bottom: solid 1px #af0000;
	font-size: 1.4em;
	color: #333333;
}
.linkarea {
	text-align: right;
}

/* table */
table {
	border-collapse:collapse;
}
table, th {
	border: 1px solid #555;
}
th {
	background-color: #cc9;
	font-size: 0.8em;
}
td {
	border-bottom: 1px dotted #aaa;
	border-left: 1px solid #555;
	padding:2px;
}
.rownumhead {
	text-align: center;
	font-size: 0.4em;
}
.rownumcell {
	text-align: center;
	font-size: 0.4em;
	color: #444;
}
.filecell {
	font-size: 0.9em;
	white-space: nowrap;
}
.extendsfilecell {
	font-size: 0.6em;
	white-space: nowrap;
}
.markcell {
	text-align: center;
	font-size: 0.8em;
}
.keycell {
	font-size: 0.9em;
	white-space: nowrap;
}
.keylistcell {
	font-size: 0.8em;
	white-space: nowrap;
}
.envtypecell {
	text-align: center;
	font-size: 0.6em;
}
.langtypecell {
	text-align: center;
	font-size: 0.6em;
}
.valuecell {
	font-size: 0.8em;
	font-weight: bold;
}
.sizecell {
	text-align: center;
	font-size: 0.8em;
}
.checkcell {
	font-size: 0.8em;
}
.commentcell {
	font-size: 0.7em;
}

/* inner table */
table.child {
	margin: 3px;
}
table.child th {
	font-size: 0.7em;
}
table.child, table.child td, table.child th {
	border-top: none;
	border-left: none;
	border-bottom: 1px solid #aaa;
	border-right: 1px solid #aaa;
}
	</style>
#end
#if ($manager.isJavaScriptEmbedded())
	<script type="text/javascript">
${manager.javaScriptEmbedded}
	</script>
#elseif ($manager.isJavaScriptLink())
	${manager.javaScriptLink}
#end
</head>

<body>
#if ($manager.hasTitle())
<h1>${manager.title}</h1>
#else
<h1>Properties for ${manager.projectName}</h1>
#end

<div class="linkarea">
#foreach ($request in $manager.requestList)
	<p><a href="#${request.requestLowerName}">${request.requestName}</a></p>
#end
</div>

<h2 id="propertieslist">Properties List</h2>

#foreach ($request in $manager.requestList)
<h3><a href="#${request.requestLowerName}">${request.requestName}</a></h3>
<table summary="File Attributes">
	<thead>
		<tr>
			<th>File</th>
			<th>Env</th>
			<th>Lang</th>
			<th>Key Count</th>
			<th>Extends</th>
			<th>Duplicate Key</th>
			<th>Over Key</th>
			<th>Short Key</th>
		</tr>
	</thead>
	<tbody>
#foreach ($attribute in $request.fileAttributeList)
		<tr>
#set ($envType = $attribute.envType)
#set ($langType = $attribute.langType)
#if ($attribute.isRootFile())
			<td class="filecell"><strong>${attribute.propertiesFile}</strong></td>
#else
			<td class="filecell">${attribute.propertiesFile}</td>
#end
			<td class="envtypecell">${envType}</td>
			<td class="langtypecell">${langType}</td>
			<td class="sizecell">${attribute.keyCount}</td>
			<td class="extendsfilecell">${attribute.extendsAttribute.propertiesFile}</td>
#if ($attribute.hasDuplicateKey())
			<td class="keylistcell">
#foreach ($duplicateKey in $attribute.duplicateKeyList)
				<p>${duplicateKey}</p>
#end
			</td>
#else
			<td>&nbsp;</td>
#end
#if (!$attribute.isRootFile())
#if ($attribute.hasOverKey())
			<td class="keylistcell">
#foreach ($overKey in $attribute.overKeyList)
				<p>${overKey}</p>
#end
			</td>
#else
#if ($attribute.isLonely())
			<td class="markcell">(lonely)</td>
#else
			<td>&nbsp;</td>
#end
#end
#else
			<td class="markcell">-</td>
#end
#if (!$attribute.isRootFile())
#if ($attribute.hasShortKey())
			<td class="keylistcell">
#foreach ($shortKey in $attribute.shortKeyList)
				<p>${shortKey}</p>
#end
			</td>
#else
#if ($attribute.isLonely())
			<td class="markcell">(lonely)</td>
#else
			<td>&nbsp;</td>
#end
#end
#else
			<td class="markcell">-</td>
#end
		</tr>
#end
	</tbody>
</table>
#end

#foreach ($request in $manager.requestList)
<h2 id="${request.requestLowerName}">${request.requestName}</h2>
<table summary="Properties">
	<thead>
	<tr>
		<th class="rownumhead">No.</th>
		<th>Property Key</th>
		<th>Contents</th>
	</tr>
	</thead>
	<tbody>
#set ($rownum = 1)
#foreach ($property in $request.propertyList)
#set ($propertyKey = $property.propertyKey)
	<tr>
		<td class="rownumcell">${rownum}</td>
		<td class="keycell">${propertyKey}</td>
		<td>
			<table class="child">
				<tr>
					<th>Env</th>
					<th>Lang</th>
					<th>Property</th>
					<th>Comment</th>
#if ($property.hasOverride())
					<th>Override</th>
#end
				</tr>
#foreach ($envElement in $property.envElementList)
#set ($envType = $envElement.envType)
#foreach ($langElement in $envElement.langElementList)
#set ($langType = $langElement.langType)
				<tr>
					<td class="envtypecell">${envType}</td>
					<td class="langtypecell">${langType}</td>
					<td class="valuecell">#if ($langElement.hasPropertyValue())${langElement.propertyValueHtmlEncoded}#else &nbsp;#end</td>
					<td class="commentcell">#if ($langElement.hasComment())${langElement.commentHtmlEncoded}#else &nbsp;#end</td>
#if ($property.hasOverride())
					<td class="checkcell">#if ($langElement.isOverride())o#else &nbsp;#end</td>
#end
				</tr>
#end
#end
			</table>
		</td>
	</tr>
#set ($rownum = $rownum + 1)
#end
	</tbody>
</table>
#end
</body>
</html>
